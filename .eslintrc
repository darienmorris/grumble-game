{
    "parser": "babel-eslint",
        "env": {
        "browser": true
    },
    "rules": {



        // Possible errors

        "no-cond-assign": 2,
        "comma-dangle": [2, "never"],
        "no-constant-condition": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 2,


        
        // Recomended best practices

        "no-multi-spaces": 1,
        "vars-on-top": 2,
        "no-floating-decimal": 2,
        "yoda": [2, "never", { "exceptRange": true }],



        // Stylistic

        "no-underscore-dangle": 0,
        "eol-last": 0
    }
}